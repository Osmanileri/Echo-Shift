default_platform(:ios)

platform :ios do
  desc "Push a new build to TestFlight"
  lane :deploy do
    # 1. API Key Auth (Apple sunucularına giriş)
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      duration: 1200,
      in_house: false
    )

    # 2. Build Numarasını Otomatik Artır
    increment_build_number(
      build_number: ENV["GITHUB_RUN_NUMBER"],
      xcodeproj: "ios/App/App.xcodeproj"
    )

    # 3. Sertifikaları Al (Cloud'da imzalama için zorunlu)
    get_certificates(api_key: api_key)
    get_provisioning_profile(api_key: api_key)

    # 4. Uygulamayı Paketle
    build_app(
      scheme: "App",
      project: "ios/App/App.xcodeproj",
      include_bitcode: false,
      export_method: "app-store"
    )

    # 5. TestFlight'a Gönder
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
